detect_os() {
  if [ -f /etc/os-release ]; then
    source /etc/os-release
    echo $ID
  else
    echo $(uname -s | tr '[:upper:]' '[:lower:]')
  fi
}

dotfiles_os=$(detect_os)
task "Loading Setup for detected OS: $dotfiles_os"
case $dotfiles_os in
  debian|kali|ubuntu)
    debian_setup
    ;;
  arch)
    arch_setup
    ;;
  darwin)
    macos_setup
    ;;
  *)
    task "Unsupported OS"
    __cmd "echo 'Unsupported OS'"
    ;;
esac


